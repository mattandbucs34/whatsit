<% if(messages.error || messages.notice) { %>

  <div class="alert alert-<%= messages.error ? 'danger' : 'warning' %> alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% if(messages.error) { %>
      <% if (Array.isArray(messages.error)) { %>
        Validation errors:
        <ul>
          <% messages.error.forEach((err) => { %>
            <li><%= `${err.path ? err.path + ': ' : ''}${err.msg}` %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p><%= messages.error %></p>
      <% } %>
    <% } else { %>
      <p><%= messages.notice %></p>
    <% } %>
  </div>
<% } %>